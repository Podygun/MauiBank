<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBank.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MauiBank.View"
    Shell.FlyoutBehavior="Flyout">


    <ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage">
        <ShellContent ContentTemplate="{DataTemplate view:AuthPage}" Route="AuthPage">
            <ShellContent ContentTemplate="{DataTemplate view:RegPage}" Route="RegPage" />
        </ShellContent>
    </ShellContent>

    <ShellContent
        Title="Персональные данные"
        ContentTemplate="{DataTemplate view:UserDataPage}"
        Route="UserDataPage" />


</Shell>
